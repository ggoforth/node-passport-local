<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet"
          href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <a href="/widgets/create" class="pull-right">Create a widget</a>
    <table class="table table-striped">
      <thead>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Prongs</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>
      <% for(var i = 0; i < widgets.length; i++) {  %>
        <tr>
          <td><%= widgets[i].name %></td>
          <td><%= widgets[i].price %></td>
          <td><%= widgets[i].prongs %></td>
          <td>
            <a href="/widgets/<%= widgets[i]._id %>/edit">Edit</a>
            <form action="/widgets/<%= widgets[i]._id %>?_method=delete" method="POST">
              <button class="btn btn-link">Delete</button>
            </form>
          </td>
        </tr>
      <% } %>
      <tr></tr>
      </tbody>
    </table>
  </body>
</html>
